<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileFragment">

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/btnLogOut"
        android:layout_centerHorizontal="true"
        android:text="tvUserName"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/pink_0"
        android:text="Log Out" />
"

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="113dp"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/instagram_user_outline_24" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@color/white"
        android:text="Edit Profile"
        android:textAllCaps="false" />

    <View
        android:id="@+id/profile_divider"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/ivProfilePic"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_gradient2" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProfilePosts"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignTop="@+id/profile_divider" />


</RelativeLayout>
